<%- include('includes/head') %>
<%- include('includes/nav'); %>

  <div class="container py-5">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-5">
        <h1 class="h1 text-center fw-normal">Login</h1>
        <p class="text-light text-center"><mark class="rounded-3"><a class="text-decoration-none text-dark" href="/login/register">Ou realize seu cadastro.</a></mark></p>

        <div class="row p-0 m-0">
          <div class="col-lg-2 p-0 m-0"></div>
          <div class="col-lg-8 p-0 m-0">
            <%- include('./includes/messages') %>
          </div>
          <div class="col-lg-2 p-0 m-0"></div>
        </div>

        <div class="row">
          <div class="col-lg-3"></div>
          <div class="col-lg-6">
            <form action="/login" method="POST" class="form-login">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" class="form-control bg-dark text-light input-form-login" id="email" name="email">
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Senha</label>
                <input type="password" class="form-control bg-dark text-light input-form-login" id="password" name="password">
              </div>
              <button type="submit" class="btn btn-dark bg-black form-control fw-semibold py-3" style="letter-spacing: 0.3rem;">Login</button>
            </form>
          </div>
          <div class="col-lg-3"></div>
        </div>

      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>

<%- include('includes/footer') %>