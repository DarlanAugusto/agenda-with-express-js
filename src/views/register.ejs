<%- include('includes/head') %>
<%- include('includes/nav'); %>

  <div class="container py-5">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-5">
        <h1 class="h1 text-center fw-normal">Cadastre-se</h1>
        <p class="text-light text-center"><mark class="rounded-3"><a class="text-decoration-none text-dark" href="/login">Ou fa√ßa Login.</a></mark></p>

        <div class="row p-0 m-0">
          <div class="col-lg-2 p-0 m-0"></div>
          <div class="col-lg-8 p-0 m-0">
            <%- include('./includes/messages') %>
          </div>
          <div class="col-lg-2 p-0 m-0"></div>
        </div>
        
        <div class="row">
          <div class="col-lg-3"></div>
          <div class="col-lg-6">
            <form action="/register" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" class="form-control bg-dark text-light" id="email" name="email">
              </div>
              <div class="mb-3 row">
                <div class="col">
                  <label for="password" class="form-label">Senha</label>
                  <input type="password" class="form-control bg-dark text-light" id="password" name="password">
                </div>
                <div class="col">
                  <label for="confirm_password" class="form-label">Confirmar Senha</label>
                  <input type="password" class="form-control bg-dark text-light" id="confirm_password" name="confirm_password">
                </div>

              </div>
              <button type="submit" class="btn btn-dark bg-black form-control fw-semibold py-3" style="letter-spacing: 0.1rem;">Criar Conta</button>
            </form>
          </div>
          <div class="col-lg-3"></div>
        </div>

      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
<%- include('includes/footer') %>