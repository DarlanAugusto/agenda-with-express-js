<%- include('includes/head') %>
<%- include('includes/nav'); %>

  <div class="container py-5">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">
        <h1 class="h1 text-center fw-normal">Agenda</h1>
        <% if(contatos.length) { %>
          <p class="text-light text-center"><mark class="rounded-3">Seus Contatos Abaixo</mark></p>
        <% } %>
        <%- include('./includes/messages') %>
        <% if(contatos.length) { %>
          <div class="responsive-table">
            <table class="table table-hover table-dark table-striped table-borderless my-3">
              <thead>
                <tr>
                  <th scope="col">Nome</th>
                  <th scope="col">Sobrenome</th>
                  <th scope="col">Email</th>
                  <th scope="col">Contato</th>
                  <th scope="col" colspan="2"></th>
                </tr>
              </thead>
              <tbody class="table-group-divider">
                  <% contatos.forEach(contato => { %>
                    <tr>
                      <th scope="row"><%= contato.name %></th>
                      <td><%= contato.lastname %></td>
                      <td><%= contato.email %></td>
                      <td>
                        <%
                          const phoneArray =  contato.phonenumber.split('');
                          phoneArray.splice(0, 0, "(");
                          phoneArray.splice(3, 0, ") ");
                          phoneArray.splice(5, 0, " ");
                          phoneArray.splice(10, 0, "-");
                        %>
                        <%= phoneArray.join(''); %>
                      </td>
                      <td>
                        <a class="text-warning opacity-75" title="Editar" href="/contatos/edit/<%= contato._id %>">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                          </svg>
                        </a>
                      </td>
                      <td>
                        <a class="text-danger" title="Remover" href="/contatos/delete/<%= contato._id %>">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                          </svg>
                        </a>
                      </td>
                    </tr>
                  <% }); %> 

              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="row my-5">
            <div class="col-12 d-flex justify-content-center mt-5">
              <h4 class="text-light text-center">
                Sua Agenda de Contatos est√° vazia.
              </h4>
            </div>
            <div class="col-12 d-flex justify-content-center">
              <p class="text-light text-center">
                Cadastre um novo contato <mark class="rounded-3 py-0"><a class="text-decoration-none text-dark" href="/contatos/register">clicando aqui.</a></mark>
              </p>
            </div>
          </div>
        <% } %>

      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>

<%- include('includes/footer') %>